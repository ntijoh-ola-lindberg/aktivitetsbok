#rake run
#rake debug

task :seed do
    require "bundler"
    Bundler.require
    require_relative 'db/seeder'
    Seeder.seed!
end

task :run do 
    sh 'bundle exec rerun --ignore "*.{slim,js,css}" "rackup --host 0.0.0.0"'
end

task :debug do
    sh 'rackup'
end

#rake test
task :test do
  tests = Dir.glob('./spec/*_spec.rb').sort_by do |a|
    basename = File.basename(a)
    splitted = basename.split("_")
    splitted.first.to_i
  end
  p tests
  tests.each do |test|
      p system("ruby #{test}")
    end
end